#:kivy 2.2.1

<SelectionScreen>:
	BoxLayout:
		orientation: 'vertical'
		Button:
			size_hint: 0.15, 0.10 * 4
			text: 'back'
			font_size: int((root.height + root.width)*0.02)
			# on_press: print('worked!')
			# on_release: print('let go')
			# on_state:
			    # print("current state - {} ".format(self.state))
			# color: 1, 1, 0, 1
			on_press:
				root.manager.transition.direction = 'right'
				root.manager.current = 'Menu'
		Button:
			text: 'solo'
			font_size: int((root.height + root.width)*0.03)
			on_press:
				root.manager.transition.direction = 'left'
				root.manager.current = 'solo'
