#:kivy 2.2.1

<MainMenu>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: '~ Dinner Date ~'
			font_size: int((root.height + root.width)*0.05)
			bold: True
			underline: True
			halign: 'center'
		Button:
			text: 'Selection'
			font_size: int((root.height + root.width)*0.03)
			on_press:
				root.manager.transition.direction = 'left'
				root.manager.current = 'SelectScreen'
		Button:
			text: 'Locations'
			font_size: int((root.height + root.width)*0.03)
			on_press:
				root.manager.transition.direction = 'left'
				root.manager.current = 'LocationScreen'