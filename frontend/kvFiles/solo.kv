#:kivy 2.2.1

<Solo>:
    pick: soloPick
    BoxLayout:
        orientation: 'vertical'
        Button:
            size_hint: 0.15, 0.10 * 3
            text: 'back'
            font_size: int((root.height + root.width)*0.02)
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'SelectScreen'
        Label:
            id: soloPick
            font_size: int((root.height + root.width)*0.02)
        Button:
            text: 'Pick'
            font_size: int((root.height + root.width)*0.02)
            on_press:
                root.pickLocation()
