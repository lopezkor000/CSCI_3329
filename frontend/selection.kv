#:kivy 2.2.1

<SelectionScreen>:
	canvas:
		Color:
			rgba: 1, .5, .5, .75
		Rectangle:
			pos: 0, 0
			size: root.width, root.height

	Button:
		text: 'test'
		# on_press: print('worked!')
		# on_release: print('let go')
		# on_state:
		#     print("current state - {} ".format(self.state))
		backround_color: 1, 1, 0, 1
		color: 1, 1, 0, 1
		size: root.width * 0.2, root.height * 0.5
		pos: (root.width - self.width)//2, (root.height - self.height)//2
		on_press: root.manager.current = 'example'

<BoxLayoutEx>:
	BoxLayout:
		orientation: 'vertical'
		Button:
			text: 'A'
			size_hint: 0.75, 0.5
			pos_hint: {'center_x': 0.5, 'y': 0.25} # x, center_x, right
		Button:
			text: 'B'
			on_press: root.on_click()